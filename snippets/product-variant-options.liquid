{% comment %}
  Renders product variant options

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to dispay


  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
    picker_type: picker_type
  %}
{% endcomment %}
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}
{%- for value in option.values -%}
  {%- liquid
    # Find the actual variant object for this value
    assign variant_obj = product.variants | where: 'title', value | first

    # Get metaobject from the variant metafield
    assign color_metaobject = variant_obj.metafields.swyfthome.colour_image.value
    assign color_image = null

    # If metaobject and button_image exist, get image URL
    if color_metaobject != blank and color_metaobject.button_image != blank
      assign color_image = color_metaobject.button_image | image_url: width: 50
    endif

    # Disabled state
    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    {{ option.name }}-{{ option.position }}
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  <input
    type="radio"
    id="{{ input_id }}"
    name="{{ input_name | escape }}"
    value="{{ value | escape }}"
    form="{{ product_form_id }}"
    {% if value.selected %}checked{% endif %}
    {% if option_disabled %}class="disabled"{% endif %}
    {{ input_dataset }}
  >

  <label for="{{ input_id }}">
    {% if color_image %}
      <img src="{{ color_image }}" alt="{{ color_metaobject.name | escape }}">
    {% else %}
      {{ value }}
    {% endif %}
    {% unless value.available %}
      <span class="visually-hidden">
        {{ 'products.product.variant_sold_out_or_unavailable' | t }}
      </span>
    {% endunless %}
  </label>
{%- endfor -%}
